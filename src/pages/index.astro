---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";
---

<!DOCTYPE html>
<html lang="en-us" class="">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"
    ></script>
  </head>

  <body class="text-lg">
    <main class="relative h-screen overflow-hidden bg-white dark:bg-gray-800">
      <div class="absolute hidden md:block -bottom-32 -right-12 w-96 h-96">
        <div
          class="absolute z-20 text-xl text-extrabold right-24 text-start top-1/4"
        >
          <span class="text-7xl"> ðŸŽ¨</span>
          <p>Got a project?</p>
          <a href="#" class="underline"> Let&#x27;s talk</a>
        </div>
        <svg
          viewBox="0 0 200 200"
          class="absolute w-full h-full"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            fill="#FFDBB9"
            d="M44.7,-76.4C58.8,-69.2,71.8,-59.1,79.6,-45.8C87.4,-32.6,90,-16.3,88.5,-0.9C87,14.6,81.4,29.2,74.1,43.2C66.7,57.2,57.6,70.6,45,78.1C32.4,85.6,16.2,87.1,0.7,85.9C-14.8,84.7,-29.6,80.9,-43.9,74.4C-58.3,67.9,-72,58.7,-79.8,45.9C-87.7,33,-89.5,16.5,-88.9,0.3C-88.4,-15.9,-85.4,-31.7,-78.1,-45.4C-70.8,-59.1,-59.1,-70.6,-45.3,-77.9C-31.6,-85.3,-15.8,-88.5,-0.3,-88.1C15.3,-87.6,30.5,-83.5,44.7,-76.4Z"
            transform="translate(100 100)"
          >
          </path>
        </svg>
      </div>
      <Header title={SITE_TITLE} />

      <div class="relative z-20 flex items-center">
        <div
          class="container relative flex flex-col items-center justify-between px-6 py-4 mx-auto"
        >
          <div class="flex flex-col">
            <!-- <img src="/images/person/11.webp" class="mx-auto rounded-full w-28"/> -->
            <p class="my-6 text-3xl text-center dark:text-white">
              HelloðŸ‘‹, I&#x27;m Alex Cosmas
            </p>
            <div
              class="max-w-3xl py-2 mx-auto text-3xl font-bold text-center text-gray-800 md:text-5xl dark:text-white"
            >
              <h2>UXE</h2>
              <h4 class="text-2xl">(User Experience Engineer)</h4>
            </div>
            <div class="max-w-2xl mt-10">
              <div class="space-y-4">
                <p>
                  I am a professional with 7+ years of experience working in
                  several industries. (Branding/Advertising, Marketing, Health &
                  Safety, Corporate Governance.)
                </p>
                <p>
                  I currently serve at Simple Formations as Lead UX Engineer.
                </p>

                <p>
                  I best descibe myself as a curious individual who loves to
                  solve unique challenges that have social impact through design
                  and code.
                </p>

                <p>
                  The ideal company that I would love to work for is a company
                  that prides itself on diversity and inclusion of people and
                  thinking.
                </p>
              </div>
            </div>

            <div class="flex items-center justify-center">
              <a
                href="#"
                class="px-4 py-2 text-gray-800 uppercase bg-transparent border-2 border-gray-800 md:mt-16 dark:text-gray-800 dark:bg-white hover:dark:bg-gray-100 hover:bg-gray-800 hover:text-white text-md"
              >
                CONNECT WITH ME
              </a>
            </div>
          </div>
        </div>
      </div>
    </main>

    <script>
      declare global {
        interface Window {
          netlifyIdentity: any;
        }
      }

      if (window.netlifyIdentity) {
        window.netlifyIdentity.on("init", (user: any) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </body>
</html>
